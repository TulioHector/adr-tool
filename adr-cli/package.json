{
  "name": "adr-cli",
  "version": "1.2.0",
  "preferGlobal": true,
  "description": "Architecture Decision Records (ADR) command cli",
  "main": "dist/index.js",
  "bin": {
    "adr-cli": "./dist/index.js"
  },
  "type": "module",
  "types": "./dist/Index.d.ts",
  "typings": "dist/index",
  "author": "HÃ©ctor Abraham Romano, https://github.com/TulioHector",
  "homepage": "https://github.com/TulioHector/adr-tool/",
  "license": "GPL-3.0-only",
  "keywords": [
    "adr",
    "decision record",
    "any decision record",
    "architectural decision",
    "architectural decision record",
    "architecture decision",
    "architecture decision record"
  ],
  "scripts": {
    "build": "tsc && npm run copyTemplate && npm run copyConfig && npm run copyLocale",
    "prepublishOnly": "npm run build && xo",
    "test": "xo",
    "copyTemplate": "copyfiles -u 1 src/templates/*.md dist",
    "copyConfig": "copyfiles -u 1 src/config/*.json dist",
    "copyLocale": "copyfiles -u 1 src/locale/*.json dist",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.2.0",
    "cli-table3": "^0.6.3",
    "commander": "^10.0.0",
    "figlet": "^1.5.2",
    "inquirer": "^9.1.4",
    "listr": "^0.14.3",
    "markdown-table": "^3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TulioHector/adr-tool.git"
  },
  "bugs": {
    "url": "https://github.com/TulioHector/adr-tool/issues"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/logic",
    "dist/utils",
    "dist/templates",
    "dist/config"
  ],
  "devDependencies": {
    "@types/figlet": "^1.5.5",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.18",
    "copyfiles": "^2.4.1",
    "typescript": "^4.9.5",
    "xo": "^0.53.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:unicorn/recommended",
      "xo",
      "xo-typescript"
    ]
  }
